<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- TODO choose accent color -->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="ClickableTextAppearance">
        <item name="android:textColor">@color/surfaceText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="PrimaryTextAppearance">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SecondaryTextAppearance">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>
